    <body>

       <%- include('nav.html') %>
   
       
        <div>채팅방</div>
        <button id="send">서버에 메세지 보내기</button>

        
        <script>
            var socket = io(); // 서버가 만들어놓은 웹소켓 접속
            $('#send').click(function() { //서버에게 웹소켓으로 실시간 메세지 보내는 법
                socket.emit('user-send', 'hello'); // socket.emit('작명', '메세지')
            })

        </script>
            

       


